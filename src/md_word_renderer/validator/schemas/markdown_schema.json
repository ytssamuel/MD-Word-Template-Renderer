{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Markdown Data Schema",
    "description": "MD-Word Template Renderer 資料結構驗證 Schema",
    "type": "object",
    "additionalProperties": true,
    "definitions": {
        "childItem": {
            "type": "object",
            "properties": {
                "number": {
                    "type": "string",
                    "description": "項目編號"
                },
                "value": {
                    "type": "string",
                    "description": "項目內容"
                },
                "children": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/childItem"
                    },
                    "description": "子項目列表"
                }
            },
            "required": ["number", "value"]
        },
        "indexedItem": {
            "type": "object",
            "properties": {
                "key": {
                    "type": "string",
                    "description": "欄位名稱"
                },
                "value": {
                    "type": "string",
                    "description": "欄位值"
                },
                "children": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/childItem"
                    },
                    "description": "子項目列表"
                }
            },
            "required": ["key", "value"]
        }
    }
}
